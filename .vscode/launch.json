{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Minishell",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/minishell", // Path to your executable
            "args": [], // Arguments to pass to the program, if any
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        "preLaunchTask": "build", // Ensure your build task is configured
        "internalConsoleOptions": "openOnSessionStart",
        "miDebuggerPath": "/usr/bin/gdb" // Path to gdb executable
    },
    {
        "name": "Attach to Process",
        "type": "cppdbg",
        "request": "attach",
        "program": "${workspaceFolder}/minishell",  // Optional: specify the path to your executable
        "processId": "214453",
        "MIMode": "gdb",                    // Or "lldb" depending on your setup
        "miDebuggerPath": "/usr/bin/gdb",   // Path to GDB or LLDB
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }
]
}
